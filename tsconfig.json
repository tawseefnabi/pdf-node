{
	"compilerOptions": {
		"target": "es2018",
		"module": "es2020",
		"moduleResolution": "node",
		"declaration": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*"]
		}
	},
	"include": ["src/**/*.ts", "types/**/*.d.ts"],
	"exclude": ["node_modules", "**/*.test.ts"]
}
